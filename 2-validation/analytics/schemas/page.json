{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://pipesdata.com/schemas/page.json",
  "title": "Page Message Schema",
  "description": "Validation for the page message",
  "type": "object",
  "required": ["anonymous_id", "type",  "message_id", "received_at", "sent_at", "timestamp"],
  "properties": {
    "type": {"constant": "page"},
    "platform": {"type": "string"},
    "anonymous_id": {"type": "string"},
    "user_id": {"type": "string"},
    "name": {"type": "string"},
    "properties": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "url": {"type": "string"},
        "path": {"type": "string"},
        "referrer": {"type": "string"},
        "search": {"type": "string"},
        "keywords": {"type": "array", "items": {"type": "string"}}
      }
    },
    "message_id": {"type": "string"},
    "received_at": {"format": "date-time"},
    "sent_at": {"format": "date-time"},
    "timestamp": {"format": "date-time"},
    "context": {"$ref": "context.json#/context"}
  }
}

